/* ###################################################################################### */
/* #								Nib 	        									# */
/* ###################################################################################### */

@import nib

/* variables */

background_color = #fff
text_color = #333
odd_color = #9acdef
even_color = #78abcd
nav_color = #333

$base_font_size = 16
$px = (1/$base_font_size) rem

/* ###################################################################################### */
/* #								Mixins 	        									# */
/* ###################################################################################### */

zebra(child = '&')
	{child}:nth-child(odd)
		background-color odd_color
	{child}:nth-child(even)
		background-color even_color
		
/* ###################################################################################### */
/* #								Media Queries      									# */
/* ###################################################################################### */

@media screen and (max-width: 1023px)
	html,body
		background-color background_color
		color text_color
		font-family Tahoma, sans-serif

@media screen and (min-width: 1024px)
	html,body
		background-color background_color
		color text_color
		font-family Tahoma, sans-serif



/* ###################################################################################### */
/* #								Page Styles		   									# */
/* ###################################################################################### */



table
	border 1px solid #000

table thead tr
	background-color #494

.formBox
	width 60%
	margin 0 auto

.dt table tr
	cursor pointer

.accountHolders
	padding 30*$px
	background-color #beb
	margin 0 auto
	margin-top 15*$px
	margin-bottom 15*$px
	border 1px solid #333
	border-radius 15*$px
	width 90%

.photographers
	padding 30*$px
	background-color #ada
	margin 0 auto
	margin-top 15*$px
	margin-bottom 15*$px
	border 1px solid #333
	border-radius 15*$px
	width 90%

.bookings
	padding 30*$px
	background-color #ada
	margin 0 auto
	margin-top 15*$px
	margin-bottom 15*$px
	border 1px solid #333
	border-radius 15*$px
	width 95%

.formtable
	padding 30*$px
	background-color #ada
	margin-top 15*$px
	margin-bottom 15*$px
	margin-left 75*$px
	border 1px solid #333
	border-radius 15*$px
	width 50%


h1.title
	margin 0 auto
	margin-top 40*$px
	margin-bottom 40*$px
	font-weight bold
	color #141


.formButton
	margin-top 20*$px
	color #fff
	width 200*$px
	height 80*$px
	background-color #407281
	border-radius 20*$px
	font-weight bold
	text-align center
	float right

#listBox
	padding 60*$px
	padding-top 10*$px
	background-color #ddd
	width 90%
	margin 0 auto
	margin-top 40*$px
	
.short
	width 300*$px !important

.ui-widget-header
	background-color #333
	color #eee
	border 1px solid #333
	

.calendar header 
	font-size 24pt
	font-weight bold
	padding 20*$px
	margin 20*$px
	border 1px solid #333
	border-radius 10*$px

/* ###################################################################################### */
/* #								Countdown Clock   									# */
/* ###################################################################################### */
#clockdiv
	font-family sans-serif
	color #fff
	display inline-block
	font-weight 100
	text-align center
	font-size 100px
	width 100%

#clockdiv > div
	padding 10px
	border-radius 3px
	background #999
	display inline-block

#clockdiv div > span
	padding 15px
	border-radius 3px
	background #555
	display inline-block

.smalltext
	padding-top 5px
	font-size 32px

button.accordion 
	background-color #eee
	color #444
	cursor pointer
	padding 18px
	width 100%
	border none
	text-align left
	outline none
	font-size 15px
	transition 0.4s
	&:hover
		background-color #ddd
	&:active
		background-color #ddd

div.panel 
	padding 0 18px
	display none
	background-color white

div.panel.show 
	display block !important

.navigation
	margin-top 20*$px
	list-style none
	display -webkit-box
	display -moz-box
	display -ms-flexbox
	display -webkit-flex
	display flex
	background-color nav_color
	flex-flow row wrap
	justify-content flex-start

@media all and (max-width: 800px)
	.navigation
		justify-content space-around

/* Small screens */
@media all and (max-width: 500px)
	.navigation
		flex-direction column

ul.navigation li
	background none
	color #fff
	display inline-block
	padding 10*$px 15*$px
	cursor pointer


ul.navigation li.current
	background deepskyblue
	color #fff


.atab
	display none
	background #ededed
	padding 15*$px
	height auto


.atab.current
	display inherit
	
.lightRed
	background-color #f0aaaa !important
 
.lightGreen
	background-color #aaf0aa !important
 
.lightAmber
	background-color #f0f077 !important

.lightBlue
	background-color #7777f0 !important
	
.sorting_1
	background transparent !important

.mapButton
	color #fff
	width 600*$px
	height 150*$px
	background-color #407281
	-webkit-border-radius 9px
	border-radius 9px
	font-weight bold
	text-align center
	margin-top 30*$px
	margin-bottom 50*$px
	
.myMapBox
	padding-bottom 250*$px

#mapMe
	width 90%
	height 150*$px
	margin 0 auto
	margin-top 50*$px
	margin-bottom 50*$px
	background-color #ccc
	border 2px solid #333
	border-radius 20px
	cursor pointer
	
#mapMe h1
	margin-top 30*$px
